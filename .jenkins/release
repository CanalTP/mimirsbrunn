pipeline {
    agent {
        docker {
            image 'python:3.6'
            args '--user root'
        }
    }
    stages {
         stage('Prepare git env'){
             steps{
                 sh "git config --global user.email 'jenkins-core@kisio.com'"
                 sh "git config --global user.name 'jenkins core'"
                 sh "git tag -l | xargs git tag -d"
             }
         }
        stage('Install extra packages') {
            steps {
                sh '''
                    pip install git+git://github.com/CanalTP/githubflow_release.git@cc5cc83da7ef4f290cadf46ed6a11601dd15fa9c
                '''
            }
        }
        stage('Change version form cargo.toml files') {
            steps {
                sh '''
                    MIMIR_VERSION=`githubflow_get_new_version --release-type $release_type  --remote-name origin`
                    for file_toml in Cargo.toml libs/bragi/Cargo.toml libs/mimir/Cargo.toml libs/tools/Cargo.toml libs/docker_wrapper/Cargo.toml
                    do
                        sed -i -e "s/^version\\s*=\\s*\\".*\\"/version = \\"$MIMIR_VERSION\\"/" $file_toml;
                    done
                    #git add Cargo.toml libs/bragi/Cargo.toml libs/mimir/Cargo.toml libs/tools/Cargo.toml libs/docker_wrapper/Cargo.toml
                    #git commit -m "[Versioned] New $release_type version $MIMIR_VERSION"
                    #git push origin master
                '''
            }
        }
        stage('Create and push new version') {
            steps {
                sh '''
                    githubflow_release --release-type $release_type --base-branch master --github-repo CanalTP/mimirsbrunn --remote-name origin
                '''
            }
        }
    }
}